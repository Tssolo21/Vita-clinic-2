<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VitaClinic.WebAPI.LoginWindow"
        Title="VitaClinic - Login"
        Width="400"
        Height="300"
        WindowStartupLocation="CenterScreen">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <TextBlock Text="VitaClinic Login" FontSize="24" HorizontalAlignment="Center" Margin="0,0,0,20"/>
        <TextBlock Text="Username:" Margin="0,0,0,5"/>
        <TextBox Name="UsernameBox" Margin="0,0,0,10"/>
        <TextBlock Text="Password:" Margin="0,0,0,5"/>
        <TextBox Name="PasswordBox" PasswordChar="*" Margin="0,0,0,20"/>
        <Button Name="LoginButton" Content="Login" HorizontalAlignment="Center" Click="Login"/>
    </StackPanel>
</Window>
