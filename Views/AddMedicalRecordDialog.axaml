<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VitaClinic.WebAPI.Views.AddMedicalRecordDialog"
        Title="Add Medical Record"
        Width="600"
        Height="650"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
        <TextBlock Text="Add Medical Record" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

        <TextBlock Text="Animal ID" Margin="0,0,0,5"/>
        <TextBox Name="AnimalIdBox" Watermark="Enter animal ID" Padding="10" Margin="0,0,0,15"/>

        <TextBlock Text="Diagnosis" Margin="0,0,0,5"/>
        <TextBox Name="DiagnosisBox" Watermark="Enter diagnosis" Padding="10" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Treatment" Margin="0,0,0,5"/>
        <TextBox Name="TreatmentBox" Watermark="Enter treatment plan" Padding="10" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Medication" Margin="0,0,0,5"/>
        <TextBox Name="MedicationBox" Watermark="Enter medication" Padding="10" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Notes" Margin="0,0,0,5"/>
        <TextBox Name="NotesBox" Watermark="Additional notes" Padding="10" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

        <TextBlock Text="Next Checkup Date (optional)" Margin="0,0,0,5"/>
        <TextBox Name="NextCheckupBox" Watermark="YYYY-MM-DD" Padding="10" Margin="0,0,0,20"/>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel" Padding="20,10" Margin="0,0,10,0" Background="#94A3B8" Foreground="White"/>
            <Button Content="Save" Click="Save" Padding="20,10" Background="#6366F1" Foreground="White"/>
        </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>