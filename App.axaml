<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VitaClinic.WebAPI.App"
             RequestedThemeVariant="Light">
    <Application.Resources>
        <!-- Animation Timing Resources -->
        <Duration x:Key="FastAnimation">0:0:0.15</Duration>
        <Duration x:Key="NormalAnimation">0:0:0.3</Duration>
        <Duration x:Key="SlowAnimation">0:0:0.5</Duration>

        <!-- Easing Functions -->
        <CubicEaseInOut x:Key="SmoothEase"/>
        <ElasticEaseOut x:Key="BounceEase"/>
        <BounceEaseOut x:Key="AttentionEase"/>
    </Application.Resources>

    <Application.Styles>
        <FluentTheme />

        <!-- Enhanced Button Animations -->
        <Style Selector="Button">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformTransition Property="RenderTransform" Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}"/>
                </Transitions>
            </Setter>
        </Style>

        <!-- Button Hover Animation -->
        <Style Selector="Button:pointerover">
            <Style.Animations>
                <Animation Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="BoxShadow" Value="0 2 4 rgba(0,0,0,0.1)"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                        <Setter Property="BoxShadow" Value="0 8 16 rgba(0,0,0,0.15)"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Button Press Animation -->
        <Style Selector="Button:pressed">
            <Style.Animations>
                <Animation Duration="0:0:0.1" Easing="{StaticResource SmoothEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.95"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.95"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Button Disabled State -->
        <Style Selector="Button:disabled">
            <Setter Property="Opacity" Value="0.6"/>
            <Style.Animations>
                <Animation Duration="{StaticResource NormalAnimation}" Easing="{StaticResource SmoothEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0.6"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Button Focus Animation -->
        <Style Selector="Button:focus">
            <Style.Animations>
                <Animation Duration="0:0:1" Easing="{StaticResource SmoothEase}" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="BorderBrush" Value="#6366F1"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="BorderBrush" Value="#818CF8"/>
                        <Setter Property="BorderThickness" Value="3"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="BorderBrush" Value="#6366F1"/>
                        <Setter Property="BorderThickness" Value="2"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Card Hover Effect -->
        <Style Selector="Border.card">
            <Setter Property="Transitions">
                <Transitions>
                    <TransformTransition Property="RenderTransform" Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}"/>
                    <BoxShadowTransition Property="BoxShadow" Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}"/>
                </Transitions>
            </Setter>
        </Style>

        <Style Selector="Border.card:pointerover">
            <Style.Animations>
                <Animation Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                        <Setter Property="BoxShadow" Value="0 2 8 rgba(0,0,0,0.1)"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="TranslateTransform.Y" Value="-4"/>
                        <Setter Property="BoxShadow" Value="0 12 24 rgba(0,0,0,0.2)"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- TextBox Focus Animation -->
        <Style Selector="TextBox:focus">
            <Style.Animations>
                <Animation Duration="{StaticResource FastAnimation}" Easing="{StaticResource SmoothEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="BorderBrush" Value="#D1D5DB"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="BorderBrush" Value="#6366F1"/>
                        <Setter Property="BoxShadow" Value="0 0 0 3 rgba(99, 102, 241, 0.1)"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Shake Animation for Errors -->
        <Style Selector="Border.error">
            <Style.Animations>
                <Animation Duration="0:0:0.5" FillBehavior="Stop">
                    <KeyFrame Cue="0%">
                        <Setter Property="TranslateTransform.X" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="10%">
                        <Setter Property="TranslateTransform.X" Value="-5"/>
                    </KeyFrame>
                    <KeyFrame Cue="20%">
                        <Setter Property="TranslateTransform.X" Value="5"/>
                    </KeyFrame>
                    <KeyFrame Cue="30%">
                        <Setter Property="TranslateTransform.X" Value="-3"/>
                    </KeyFrame>
                    <KeyFrame Cue="40%">
                        <Setter Property="TranslateTransform.X" Value="3"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="TranslateTransform.X" Value="-1"/>
                    </KeyFrame>
                    <KeyFrame Cue="60%">
                        <Setter Property="TranslateTransform.X" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="70%">
                        <Setter Property="TranslateTransform.X" Value="-0.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="80%">
                        <Setter Property="TranslateTransform.X" Value="0.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="90%">
                        <Setter Property="TranslateTransform.X" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="TranslateTransform.X" Value="0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Bounce Animation for New Items -->
        <Style Selector="Border.bounce-in">
            <Style.Animations>
                <Animation Duration="0:0:0.6" FillBehavior="Stop" Easing="{StaticResource BounceEase}">
                    <KeyFrame Cue="0%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.3"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.3"/>
                        <Setter Property="Opacity" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1.05"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.05"/>
                        <Setter Property="Opacity" Value="0.8"/>
                    </KeyFrame>
                    <KeyFrame Cue="70%">
                        <Setter Property="ScaleTransform.ScaleX" Value="0.9"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="0.9"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Pulse Animation for Notifications -->
        <Style Selector="Border.pulse">
            <Style.Animations>
                <Animation Duration="0:0:2" FillBehavior="Stop" Easing="{StaticResource SmoothEase}" IterationCount="3">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="25%">
                        <Setter Property="Opacity" Value="0.7"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="75%">
                        <Setter Property="Opacity" Value="0.7"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1.1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1.1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleX" Value="1"/>
                        <Setter Property="ScaleTransform.ScaleY" Value="1"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Loading Spinner Animation -->
        <Style Selector="Border.spinner">
            <Style.Animations>
                <Animation Duration="0:0:1" FillBehavior="Stop" Easing="Linear" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Skeleton Loading Animation -->
        <Style Selector="Border.skeleton">
            <Style.Animations>
                <Animation Duration="0:0:1.5" FillBehavior="Stop" Easing="Linear" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="Background" Value="#F3F4F6"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Background" Value="#E5E7EB"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Background" Value="#F3F4F6"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <!-- Fade In Animation for Lists -->
        <Style Selector="ItemsControl > ContentPresenter > Border">
            <Setter Property="Opacity" Value="0"/>
            <Style.Animations>
                <Animation Duration="{StaticResource SlowAnimation}" Easing="{StaticResource SmoothEase}" FillBehavior="Stop">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0"/>
                        <Setter Property="TranslateTransform.Y" Value="20"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="1"/>
                        <Setter Property="TranslateTransform.Y" Value="0"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </Application.Styles>
</Application>
