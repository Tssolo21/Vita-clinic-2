<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:animation="clr-namespace:Avalonia.Animation;assembly=Avalonia.Animation"
             x:Class="VitaClinic.WebAPI.Controls.LoadingSpinner">

    <UserControl.Styles>
    </UserControl.Styles>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <!-- Spinner Circle -->
        <Border Name="SpinnerCircle"
                Width="{Binding SpinnerSize, FallbackValue=40}"
                Height="{Binding SpinnerSize, FallbackValue=40}"
                Background="Transparent"
                CornerRadius="20"
                Classes="spinner">
            <Border BorderBrush="{Binding SpinnerColor, FallbackValue=#6366F1}"
                    BorderThickness="{Binding SpinnerBorderThickness, FallbackValue=4}"
                    ClipToBounds="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="#6366F1" Offset="0"/>
                        <GradientStop Color="#818CF8" Offset="0.5"/>
                        <GradientStop Color="#6366F1" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!-- Create a partial circle effect -->
                <Border.OpacityMask>
                    <RadialGradientBrush>
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="Black" Offset="0.7"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </RadialGradientBrush>
                </Border.OpacityMask>
            </Border>
        </Border>

        <!-- Optional Loading Text -->
        <TextBlock Name="LoadingText"
                   Text="{Binding SpinnerLoadingText, FallbackValue=Loading...}"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   FontSize="{Binding TextSize, FallbackValue=14}"
                   Foreground="{Binding TextColor, FallbackValue=#6B7280}"
                   Classes="loading-text"
                   IsVisible="{Binding ShowText, FallbackValue=True}"/>
    </StackPanel>
</UserControl>