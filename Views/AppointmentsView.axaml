<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:animation="clr-namespace:Avalonia.Animation;assembly=Avalonia.Animation"
             x:Class="VitaClinic.WebAPI.Views.AppointmentsView">

    <UserControl.Styles>
        <!-- Calendar Date Hover Effect -->
        <Style Selector="Border.calendar-date">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>

        <!-- Time Slot Hover Effect -->
        <Style Selector="Border.time-slot">
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="BorderBrush" Value="#E5E7EB"/>
        </Style>
    </UserControl.Styles>

    <StackPanel Margin="20">
        <!-- Header with animation -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“…" FontSize="32" Margin="0,0,12,0" VerticalAlignment="Center"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="Appointments Management" FontSize="28" FontWeight="Bold" Foreground="#1F2937"/>
                <TextBlock Text="Schedule and manage veterinary appointments" FontSize="14" Foreground="#6B7280" Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>

        <!-- Action Buttons -->
        <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
            <Button Name="BackButton" Content="â¬…ï¸ Back to Dashboard" Click="GoBack"
                    Background="#6B7280" Foreground="White" Padding="12,8" Margin="0,0,10,0"
                    Classes="card"/>
            <Button Name="AddAppointmentButton" Content="âž• Add Appointment" Click="AddAppointment"
                    Background="#6366F1" Foreground="White" Padding="12,8" Margin="0,0,10,0"
                    Classes="card"/>
            <Button Name="RefreshButton" Content="ðŸ”„ Refresh" Click="LoadAppointments"
                    Background="#10B981" Foreground="White" Padding="12,8"
                    Classes="card"/>
        </StackPanel>

        <!-- Calendar View -->
        <Border Background="#F9FAFB" CornerRadius="12" Margin="0,0,0,20" Padding="20" Classes="card">
            <StackPanel>
                <!-- Calendar Header -->
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" Content="â—€" Background="Transparent" BorderThickness="0"
                            Foreground="#6B7280" FontSize="16" Padding="8" Classes="card"/>

                    <TextBlock Grid.Column="1" Text="November 2024" FontSize="18" FontWeight="Bold"
                               Foreground="#1F2937" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                    <Button Grid.Column="2" Content="â–¶" Background="Transparent" BorderThickness="0"
                            Foreground="#6B7280" FontSize="16" Padding="8" Classes="card"/>
                </Grid>

                <!-- Calendar Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Day Headers -->
                    <TextBlock Grid.Column="0" Grid.Row="0" Text="Sun" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="1" Grid.Row="0" Text="Mon" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="2" Grid.Row="0" Text="Tue" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="3" Grid.Row="0" Text="Wed" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="4" Grid.Row="0" Text="Thu" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="5" Grid.Row="0" Text="Fri" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>
                    <TextBlock Grid.Column="6" Grid.Row="0" Text="Sat" HorizontalAlignment="Center" FontWeight="Bold" Foreground="#6B7280" Margin="4"/>

                    <!-- Calendar Days (Sample) -->
                    <Border Grid.Column="0" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="29" HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="30" HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="31" HorizontalAlignment="Center" Foreground="#9CA3AF"/>
                    </Border>
                    <Border Grid.Column="3" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="1" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="4" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="2" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="5" Grid.Row="1" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="3" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="6" Grid.Row="1" Classes="calendar-date selected" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="4" HorizontalAlignment="Center" Foreground="White" FontWeight="Bold"/>
                    </Border>

                    <!-- More calendar days... -->
                    <Border Grid.Column="0" Grid.Row="2" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="5" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="1" Grid.Row="2" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <TextBlock Text="6" HorizontalAlignment="Center"/>
                    </Border>
                    <Border Grid.Column="2" Grid.Row="2" Classes="calendar-date" CornerRadius="8" Margin="4" Padding="8">
                        <StackPanel>
                            <TextBlock Text="7" HorizontalAlignment="Center"/>
                            <Border Background="#EF4444" CornerRadius="4" Height="4" Width="4" HorizontalAlignment="Center" Margin="0,2,0,0"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Time Slots Section -->
        <Border Background="#F9FAFB" CornerRadius="12" Margin="0,0,0,20" Padding="20" Classes="card">
            <StackPanel>
                <TextBlock Text="Available Time Slots" FontSize="18" FontWeight="Bold" Foreground="#1F2937" Margin="0,0,0,12"/>

                <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" MaxHeight="200">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <Border Classes="time-slot" CornerRadius="8" Margin="4" Padding="12,8" BorderThickness="1">
                            <TextBlock Text="9:00 AM" FontSize="12" Foreground="#374151"/>
                        </Border>
                        <Border Classes="time-slot" CornerRadius="8" Margin="4" Padding="12,8" BorderThickness="1">
                            <TextBlock Text="9:30 AM" FontSize="12" Foreground="#374151"/>
                        </Border>
                        <Border Classes="time-slot" CornerRadius="8" Margin="4" Padding="12,8" BorderThickness="1">
                            <TextBlock Text="10:00 AM" FontSize="12" Foreground="#374151"/>
                        </Border>
                        <Border Classes="time-slot" CornerRadius="8" Margin="4" Padding="12,8" BorderThickness="1">
                            <TextBlock Text="10:30 AM" FontSize="12" Foreground="#374151"/>
                        </Border>
                        <Border Classes="time-slot" CornerRadius="8" Margin="4" Padding="12,8" BorderThickness="1">
                            <TextBlock Text="11:00 AM" FontSize="12" Foreground="#374151"/>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
        </Border>

        <!-- Appointments List -->
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl Name="AppointmentsList" ItemsSource="{Binding Appointments}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="#E5E7EB" BorderThickness="2" CornerRadius="12" Margin="8"
                                Padding="20" Background="White" Classes="appointment-card">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- Time Indicator -->
                                <Border Grid.Column="0"
                                        Width="80" Height="80"
                                        CornerRadius="12"
                                        Background="#F3F4F6"
                                        Margin="0,0,16,0"
                                        VerticalAlignment="Top">
                                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding AppointmentDateTime, StringFormat='{}{0:hh}'}"
                                                   FontSize="18" FontWeight="Bold" Foreground="#1F2937" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding AppointmentDateTime, StringFormat='{}{0:mm}'}"
                                                   FontSize="14" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                        <TextBlock Text="{Binding AppointmentDateTime, StringFormat='{}{0:tt}'}"
                                                   FontSize="10" Foreground="#6B7280" HorizontalAlignment="Center"/>
                                    </StackPanel>
                                </Border>

                                <!-- Appointment Content -->
                                <StackPanel Grid.Column="1">
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                        <TextBlock Text="ðŸ¾" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center"/>
                                        <TextBlock Text="{Binding PetName}" FontSize="20" FontWeight="Bold"
                                                   Foreground="#1F2937" Margin="0,0,12,0"/>
                                        <!-- Status Badge -->
                                        <Border Classes="status-scheduled" CornerRadius="12" Padding="8,4" Margin="8,0,0,0">
                                            <TextBlock Text="{Binding Status}" FontSize="10" Foreground="White" FontWeight="Bold"/>
                                        </Border>
                                    </StackPanel>

                                    <Grid Margin="0,0,0,8">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="ðŸ‘¤" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="Owner:" FontSize="12" FontWeight="Bold" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding OwnerName}" FontSize="12" Foreground="#374151" Margin="4,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="ðŸ¥" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="Type:" FontSize="12" FontWeight="Bold" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding AppointmentType}" FontSize="12" Foreground="#374151" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <StackPanel Grid.Column="1" Margin="16,0,0,0">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                                <TextBlock Text="âš•ï¸" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="Veterinarian:" FontSize="12" FontWeight="Bold" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding VeterinarianName}" FontSize="12" Foreground="#374151" Margin="4,0,0,0"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="ðŸ“…" FontSize="12" Margin="0,0,4,0"/>
                                                <TextBlock Text="Date:" FontSize="12" FontWeight="Bold" Foreground="#6B7280"/>
                                                <TextBlock Text="{Binding AppointmentDateTime, StringFormat=' {0:MMM d}'}" FontSize="12" Foreground="#374151" Margin="4,0,0,0"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </Grid>

                                    <StackPanel Margin="0,8,0,0">
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                                            <TextBlock Text="ðŸ“" FontSize="12" Margin="0,0,4,0"/>
                                            <TextBlock Text="Description:" FontSize="12" FontWeight="Bold" Foreground="#6B7280"/>
                                        </StackPanel>
                                        <TextBlock Text="{Binding Description}" FontSize="12" TextWrapping="Wrap"
                                                   Foreground="#374151" Margin="16,0,0,0"/>
                                    </StackPanel>
                                </StackPanel>

                                <!-- Action Buttons -->
                                <StackPanel Grid.Column="2" Orientation="Vertical" VerticalAlignment="Top" Margin="16,0,0,0">
                                    <Button Content="âœï¸ Edit" Padding="12,8" Margin="0,0,0,8"
                                            Background="#6366F1" Foreground="White" CornerRadius="8"
                                            Click="EditAppointment" Tag="{Binding Id}"
                                            Classes="card"/>
                                    <Button Content="ðŸ—‘ï¸ Delete" Padding="12,8"
                                            Background="#EF4444" Foreground="White" CornerRadius="8"
                                            Click="DeleteAppointment" Tag="{Binding Id}"
                                            Classes="card"/>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </StackPanel>
</UserControl>
