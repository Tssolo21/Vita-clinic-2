<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VitaClinic.WebAPI.Views.ChangePasswordDialog"
        Title="Change Password"
        Width="450"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Margin="30">
        <TextBlock Text="ðŸ”‘ Change Password" FontSize="24" FontWeight="Bold" Margin="0,0,0,10"/>
        <TextBlock Text="Secure your account with a strong password" 
                   FontSize="14" Foreground="#64748B" Margin="0,0,0,25" TextWrapping="Wrap"/>
        
        <TextBlock Text="Current Password *" Margin="0,0,0,5" FontWeight="SemiBold"/>
        <TextBox Name="CurrentPasswordBox" Watermark="Enter current password" 
                 PasswordChar="â€¢" Padding="10" Margin="0,0,0,15"/>
        
        <TextBlock Text="New Password *" Margin="0,0,0,5" FontWeight="SemiBold"/>
        <TextBox Name="NewPasswordBox" Watermark="Enter new password" 
                 PasswordChar="â€¢" Padding="10" Margin="0,0,0,5"/>
        <TextBlock Text="Minimum 6 characters" FontSize="12" Foreground="#94A3B8" Margin="0,0,0,15"/>
        
        <TextBlock Text="Confirm New Password *" Margin="0,0,0,5" FontWeight="SemiBold"/>
        <TextBox Name="ConfirmPasswordBox" Watermark="Confirm new password" 
                 PasswordChar="â€¢" Padding="10" Margin="0,0,0,20"/>
        
        <Border Name="ErrorBorder" Background="#FEE2E2" Padding="12" CornerRadius="6" 
                BorderThickness="1" BorderBrush="#EF4444" IsVisible="False" Margin="0,0,0,15">
            <TextBlock Name="ErrorText" Text="" FontSize="13" Foreground="#991B1B" TextWrapping="Wrap"/>
        </Border>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Cancel" Click="Cancel" 
                    Padding="20,10" Margin="0,0,10,0" 
                    Background="#94A3B8" Foreground="White"/>
            <Button Content="Change Password" Click="ChangePassword" 
                    Padding="20,10" 
                    Background="#F59E0B" Foreground="White"/>
        </StackPanel>
    </StackPanel>
</Window>
