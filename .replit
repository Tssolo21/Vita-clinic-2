modules = ["web", "dotnet-7.0", "dotnet-8.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "VitaClinic Desktop App"

[[workflows.workflow]]
name = "VitaClinic Desktop App"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "dotnet run --project VitaClinic.WebAPI.csproj"

[workflows.workflow.metadata]
outputType = "vnc"

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 46477
externalPort = 3000

[deployment]
deploymentTarget = "autoscale"
run = ["dotnet", "run", "--project", "VitaClinic.WebAPI.csproj", "--no-build"]
build = ["dotnet", "build", "VitaClinic.WebAPI.csproj", "-c", "Release"]
