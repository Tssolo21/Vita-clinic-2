<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VitaClinic.WebAPI.Views.EditAppointmentDialog"
        Title="Edit Appointment"
        Width="600"
        Height="600"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Edit Appointment" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Animal ID" Margin="0,0,0,5"/>
            <TextBox Name="AnimalIdBox" Watermark="Enter animal ID" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Pet Name" Margin="0,0,0,5"/>
            <TextBox Name="PetNameBox" Watermark="Enter pet name" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Owner Name" Margin="0,0,0,5"/>
            <TextBox Name="OwnerNameBox" Watermark="Enter owner name" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Appointment Type" Margin="0,0,0,5"/>
            <TextBox Name="AppointmentTypeBox" Watermark="e.g., Checkup, Vaccination, Surgery" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Appointment Date and Time" Margin="0,0,0,5"/>
            <TextBox Name="AppointmentDateTimeBox" Watermark="YYYY-MM-DD HH:MM" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Veterinarian Name" Margin="0,0,0,5"/>
            <TextBox Name="VeterinarianNameBox" Watermark="Enter veterinarian name" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Status" Margin="0,0,0,5"/>
            <TextBox Name="StatusBox" Watermark="Confirmed, Waiting, Completed, etc." Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Description" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionBox" Watermark="Appointment description" Padding="10" Margin="0,0,0,15" AcceptsReturn="True" Height="60"/>

            <TextBlock Text="Notes" Margin="0,0,0,5"/>
            <TextBox Name="NotesBox" Watermark="Additional notes" Padding="10" Margin="0,0,0,20" AcceptsReturn="True" Height="60"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="Cancel" Padding="20,10" Margin="0,0,10,0" Background="#94A3B8" Foreground="White"/>
                <Button Content="Update" Click="Save" Padding="20,10" Background="#6366F1" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>