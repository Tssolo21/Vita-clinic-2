<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="VitaClinic.WebAPI.Views.AddInventoryDialog"
        Title="Add New Inventory Item"
        Width="450" Height="550"
        WindowStartupLocation="CenterOwner"
        CanResize="True">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <TextBlock Text="Add New Inventory Item" FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <TextBlock Text="Item Name" Margin="0,0,0,5"/>
            <TextBox Name="ItemNameBox" Watermark="Enter item name" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Item Type" Margin="0,0,0,5"/>
            <ComboBox Name="ItemTypeBox" Margin="0,0,0,15" Padding="10" SelectedIndex="0">
                <ComboBoxItem>Medicine</ComboBoxItem>
                <ComboBoxItem>Equipment</ComboBoxItem>
                <ComboBoxItem>Supplies</ComboBoxItem>
                <ComboBoxItem>Food</ComboBoxItem>
                <ComboBoxItem>Other</ComboBoxItem>
            </ComboBox>

            <TextBlock Text="Description" Margin="0,0,0,5"/>
            <TextBox Name="DescriptionBox" Watermark="Enter item description" Padding="10" Margin="0,0,0,15"/>

            <Grid Margin="0,0,0,15">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="20"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Quantity" Margin="0,0,0,5"/>
                    <TextBox Name="QuantityBox" Watermark="0" Padding="10"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Min Stock Level" Margin="0,0,0,5"/>
                    <TextBox Name="MinStockBox" Watermark="0" Padding="10"/>
                </StackPanel>
            </Grid>

            <TextBlock Text="Unit Price" Margin="0,0,0,5"/>
            <TextBox Name="UnitPriceBox" Watermark="0.00" Padding="10" Margin="0,0,0,15"/>

            <TextBlock Text="Supplier" Margin="0,0,0,5"/>
            <TextBox Name="SupplierBox" Watermark="Enter supplier name" Padding="10" Margin="0,0,0,20"/>

            <Border Background="#FFF3CD" CornerRadius="8" Padding="15" Margin="0,0,0,20">
                <TextBlock Name="ErrorText" Text="" Foreground="#856404" TextWrapping="Wrap"/>
            </Border>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Cancel" Click="Cancel" Padding="20,10" Margin="0,0,10,0" Background="#94A3B8" Foreground="White"/>
                <Button Content="Save" Click="Save" Padding="20,10" Background="#6366F1" Foreground="White"/>
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Window>