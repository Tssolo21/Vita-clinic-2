<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="VitaClinic.WebAPI.Controls.LoadingSpinner">

    <UserControl.Styles>
        <Style Selector="Border.spinner">
            <Style.Animations>
                <Animation Duration="0:0:1" FillBehavior="Stop" Easing="Linear" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Border.small-spinner">
            <Style.Animations>
                <Animation Duration="0:0:0.8" FillBehavior="Stop" Easing="Linear" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="Border.large-spinner">
            <Style.Animations>
                <Animation Duration="0:0:1.2" FillBehavior="Stop" Easing="Linear" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="RotateTransform.Angle" Value="0"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="RotateTransform.Angle" Value="360"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>

        <Style Selector="TextBlock.loading-text">
            <Style.Animations>
                <Animation Duration="0:0:2" FillBehavior="Stop" Easing="CubicEaseInOut" IterationCount="Infinite">
                    <KeyFrame Cue="0%">
                        <Setter Property="Opacity" Value="0.5"/>
                    </KeyFrame>
                    <KeyFrame Cue="50%">
                        <Setter Property="Opacity" Value="1"/>
                    </KeyFrame>
                    <KeyFrame Cue="100%">
                        <Setter Property="Opacity" Value="0.5"/>
                    </KeyFrame>
                </Animation>
            </Style.Animations>
        </Style>
    </UserControl.Styles>

    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
        <!-- Spinner Circle -->
        <Border Name="SpinnerCircle"
                Width="{Binding SpinnerSize, FallbackValue=40}"
                Height="{Binding SpinnerSize, FallbackValue=40}"
                Background="Transparent"
                Classes="spinner">
            <Border.CornerRadius>
                <CornerRadius Radius="20"/>
            </Border.CornerRadius>
            <Border BorderBrush="{Binding SpinnerColor, FallbackValue=#6366F1}"
                    BorderThickness="{Binding BorderThickness, FallbackValue=4}"
                    ClipToBounds="False">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0%,0%" EndPoint="100%,100%">
                        <GradientStop Color="{Binding SpinnerColor, FallbackValue=#6366F1}" Offset="0"/>
                        <GradientStop Color="{Binding SpinnerColorLight, FallbackValue=#818CF8}" Offset="0.5"/>
                        <GradientStop Color="{Binding SpinnerColor, FallbackValue=#6366F1}" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <!-- Create a partial circle effect -->
                <Border.OpacityMask>
                    <RadialGradientBrush>
                        <GradientStop Color="Transparent" Offset="0"/>
                        <GradientStop Color="Black" Offset="0.7"/>
                        <GradientStop Color="Black" Offset="1"/>
                    </RadialGradientBrush>
                </Border.OpacityMask>
            </Border>
        </Border>

        <!-- Optional Loading Text -->
        <TextBlock Name="LoadingText"
                   Text="{Binding LoadingText, FallbackValue=Loading...}"
                   HorizontalAlignment="Center"
                   Margin="0,10,0,0"
                   FontSize="{Binding TextSize, FallbackValue=14}"
                   Foreground="{Binding TextColor, FallbackValue=#6B7280}"
                   Classes="loading-text"
                   IsVisible="{Binding ShowText, FallbackValue=True}"/>
    </StackPanel>
</UserControl>